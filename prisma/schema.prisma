// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Clientes {
  id             String     @id @default(uuid())
  nome           String
  email          String
  cpf            String
  telefone       String
  datanascimento String?
  senha          String
  pedidos        Pedidos[]
  enderecos      Endereco[]

  @@unique([id])
  @@map("clientes")
}

model Pedidos {
  id                  String    @id @default(uuid())
  nome                String
  preco               Float
  cod_pedido          String
  cliente             Clientes  @relation(fields: [id_cliente], references: [id])
  id_cliente          String
  produtos            Produtos  @relation(fields: [id_produto], references: [id])
  id_produto          String
  cliente_numero      String
  id_cliente_endereco String
  cliente_endereco    String
  forma_pagamento     String
  id_entregador       String
  status              String
  created_at          DateTime  @default(now())
  end_at              DateTime?

  @@map("pedidos")
}

model Restaurante {
  id       String @id @default(uuid())
  nome     String
  telefone String
  email    String

  @@map("restaurante")
}

model Produtos {
  id             String    @id @default(uuid())
  nome           String
  descricao      String
  ingredientes   String
  valor_unitario String
  imagem         String
  pedidos        Pedidos[]
  valor          Float
  valordesconto  Float

  @@unique([id])
  @@map("produtos")
}

model Entregador {
  id       String @id @default(uuid())
  nome     String
  cpf      String
  telefone String
  email    String
  senha    String

  @@map("entregador")
}

model Endereco {
  id         String   @id @default(uuid())
  nome_rua   String
  cep        String
  id_cliente String
  clientes   Clientes @relation(fields: [id_cliente], references: [id])

  @@map("endereco")
}
